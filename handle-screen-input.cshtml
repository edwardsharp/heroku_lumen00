@{
    Response.ContentType = "text/xml";
    
    var twiml = new Twilio.TwiML.TwilioResponse();

    int user_pushed = int.Parse(Request["Digits"]);

	if (user_pushed == 1)
	{
        twiml.Say("Connecting you to the caller. All calls are recorded.");
	}
	else {
        twiml.Hangup();
	}
}
@Html.Raw(twiml.ToString())